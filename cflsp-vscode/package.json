{
	"name": "cflsp",
	"description": "ColdFusion syntax error checker",
	"author": "David Rogers",
	"license": "MIT",
	"version": "1.0.27",
	"publisher": "DavidRogers",
	"categories": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/softwareCobbler/cfc.git"
	},
	"keywords": [
		"ColdFusion"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:cfml"
	],
	"main": "./out/cflsp.js",
	"files": ["out/lib.cf2018.d.cfm"],
	"contributes": {
		"languages": [
			{
				"id": "cfml",
				"extensions": [".cfm", ".cfc", ".cfml"],
				"aliases": ["ColdFusion", "CFML"],
				"filenames": [],
				"configuration": "./language-configuration.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"cflsp.x_types": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "experimental types / flow analysis; toggling it on enables better autocomplete and errors, but it is still in development and WILL crash. default is OFF (unchecked / false)."
				},
				"cflsp.languageVersion": {
					"scope": "resource",
					"type": "string",
					"description": "Which ColdFusion language version to use",
					"enum": [
						"Adobe",
						"Lucee"
					],
					"default": "Lucee",
					"enumDescriptions": [
						"Adobe",
						"Lucee"
					],
					"items": ["acf2018+", "lucee5+"]
				},
				"cflsp.wireboxResolution": {
					"scope": "resource",
					"type": "boolean",
					"description": "Enable experimental resolution of CFCs via Wirebox's `getInstance`.",
					"default": false
				},
				"cflsp.wireboxConfigFile": {
					"scope": "resource",
					"type": "string",
					"description": "Project-relative path to the Wirebox config file.",
					"default": "config/Wirebox.cfc"
				}
			}
		}
	},
	"scripts": {
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^2.3.0",
		"eslint": "^6.4.0",
		"mocha": "^8.1.1",
		"typescript": "^4.2.2"
	}
}
