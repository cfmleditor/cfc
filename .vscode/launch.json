{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "test scratchpad",
			"outFiles": ["${workspaceFolder}/out/**/*.js"],
			"program": "${workspaceFolder}/out/scratch/scratch.js"
		},
        {
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch cflsp (client plugin)",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}/cflsp-vscode/"],
			"outFiles": ["${workspaceFolder}/cflsp-vscode/out/**/*.js"],
			"trace": true,
			"skipFiles": [
				"<node_internals>/**",
				"/snap/**",
				"/home/david/.vscode/**"
			]
		},
        {
			"type": "node",
			"request": "attach",
			"name": "Attach to vs-code server process",
			"port": 6011,
			"outFiles": ["${workspaceFolder}/cflsp-vscode/out/**/*.js"],
			"trace": true,
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to parse/bind/check process",
			"port": 6012,
			"outFiles": ["${workspaceFolder}/cflsp-vscode/out/**/*.js"],
			"trace": true,
			"skipFiles": [
				"<node_internals>/**",
				"/snap/**",
				"/home/david/.vscode/**"
			]
		},
		{
			"name": "Debug build system",
			"autoAttachChildProcesses": false,
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/out/build/build.js",
			"cwd": "${workspaceFolder}",
			"sourceMaps": true,
			"skipFiles": [
				"<node_internals>/**",
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
			]
		},
		{
			"name": "debug current test w/ precompile",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "build-current-test-as-debuggable-test",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": ["--spec=${workspaceFolder}/test/out/debug-test.js"],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/test/out/**/*.js",
				"${workspaceFolder}/out/**/*.js",
				"!**/node_modules/**"
			]
		}
    ],
    "compounds": [
		{
			"name": "Client + cflsServer",
			"configurations": [
				"Launch cflsp (client plugin)",
				"Attach to parse/bind/check process",
			]
		},
		{
			"name": "all",
			"configurations": [
				"Launch cflsp (client plugin)",
				"Attach to parse/bind/check process",
				"Attach to vs-code server process",
			]
		}
	]
}