{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "test scratchpad",
			"outFiles": ["${workspaceRoot}/out/**/*.js"],
			"program": "${workspaceRoot}/out/scratch/scratch.js"
		},
        {
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch cflsp (client plugin)",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/cflsp-vscode/"],
			"outFiles": ["${workspaceRoot}/cflsp-vscode/out/**/*.js"],
			"trace": true
		},
        {
			"type": "node",
			"request": "attach",
			"name": "Attach to vs-code server process",
			"port": 6011,
			"restart": false,
			"autoAttachChildProcesses": true,
			"outFiles": ["${workspaceRoot}/cflsp-vscode/out/**/*.js"],
			"trace": true,
			
		},
		{
			"name": "Debug current test",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
			"stopOnEntry": false,
			"args": ["--spec=${file}", "--extension=ts", "--require=ts-node/register", "--no-timeouts"],
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": null,
			"sourceMaps": true,
			"env": { "NODE_ENV": "testing"}
		}
    ],
    "compounds": [
		{
			"name": "Client + vsServer + cflsServer",
			"configurations": [
				"Launch cflsp (client plugin)",
				"Attach to vs-code server process"
			]
		}
	]
}